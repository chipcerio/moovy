<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="240dp"
        app:srcCompat="@drawable/ic_launcher_background"
        android:id="@+id/posterView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        tools:ignore="VectorDrawableCompat"/>

    <TextView
        android:text="Minions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleView"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/posterView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

    <TextView
        android:text="2015 Jun 17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/releaseDateView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <TextView
        android:text="Minions Stuart, Kevin and Bob are recruited by Scarlet Overkill, a super-villain who, alongside her inventor husband Herb, hatches a plot to take over the world."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/overview"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/releaseDateView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_play_arrow_white_24dp"
        android:id="@+id/floatingPlayView"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/titleView"
        app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>